{
	"name": "seatreminder",
	"displayName": "seat reminder",
	"description": "sedentary reminder, get out of your seat and exercise.",
	"version": "0.0.2",
    "publisher": "kanbang",
	"engines": {
		"vscode": "^1.46.0"
	},
	"categories": [
		"Other"
	],
    "keywords": [
        "久坐提醒",
        "健康提醒",
        "运动提醒",
        "seat",
        "reminder"
    ],
	"bugs": {
        "url": "https://github.com/kanbang/seat-reminder/issues",
        "email": "kanbang@msn.com"
    },
    "homepage": "https://github.com/kanbang/seat-reminder/blob/master/README.md",
    "repository": {
        "type": "git",
        "url": "https://github.com/kanbang/seat-reminder.git"
    },
	"activationEvents": [
		"*"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "kk.electron.validate",
				"title": "electron version evalidate"
			},
			{
				"command": "kk.electron.install",
				"title": "electron install"
			},
			{
				"command": "kk.seat.remind",
				"title": "seat remind"
			},
			{
				"command": "kk.seat.switch_enable",
				"title": "switch remind enable"
			},
			{
				"command": "kk.seat.set_minutes",
				"title": "set remind minutes"
			}
			
		],
		"configuration": {
			"type": "object",
			"title": "久坐提醒",
			"properties": {
				"seat.enable": {
					"type": "boolean",
					"default": true,
					"description": "开启久坐提醒"
				},
				"seat.reminderIntervalInMinutes": {
					"type": "number",
					"default": 45,
					"enum": [
						1,
						30,
						45,
						60,
						90,
						120
					],
					"enumDescriptions": [
						"每[1]分钟提醒一次",
						"每[30]分钟提醒一次",
						"每[45]分钟提醒一次",
						"每[60]分钟提醒一次",
						"每[90]分钟提醒一次",
						"每[120]分钟提醒一次"
					],
					"description": "提醒周期（分钟）"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"test-compile": "tsc -p ./",
		"test-watch": "tsc -watch -p ./",
		"pretest": "npm run test-compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.46.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"eslint": "^7.19.0",
		"@typescript-eslint/eslint-plugin": "^4.14.1",
		"@typescript-eslint/parser": "^4.14.1",
		"glob": "^7.1.6",
		"mocha": "^8.2.1",
		"typescript": "^4.1.3",
		"vscode-test": "^1.5.0",
		"ts-loader": "^8.0.14",
		"webpack": "^5.19.0",
		"webpack-cli": "^4.4.0",
		"tsyringe": "^4.5.0",
		"@types/node-fetch": "^2.5.8",
		"node-fetch": "^2.6.1",
		"reflect-metadata": "^0.1.13",
		"html-webpack-plugin": "^5.3.1",
		"electron": "^12.0.2"
	}
}